<section class="hero">
  <h2>Welcome to Tech Blog</h2>
  <p>Discover the latest tech news, insights, and discussions.</p>
</section>

<section class="post-list">
  {{#each posts as |post|}}
    <article class="post">
      <h3><a href="/post/{{post.id}}">{{post.title}}</a></h3>
      <p class="post-content">{{post.content}}</p>
      <p class="post-time">@{{post.user.username}} {{format_date post.createdAt}}</p>
    </article>
  {{/each}}
</section>